  <div class="row">
    <div class="col-md-6 mx-auto">
        <h1>SIGNUP</h1>
        <form action="/register" method="POST">
              
            <div class="mt-3">
                <p>what is your role </p>
                <label class="form-label" for="buyer">buyer:</label>
                <input class="form-check-input" type="radio" name="role" value="buyer" id="buyer"  required>
            </div>
            <div class="mt-3">
                <label class="form-label" for="seller">seller:</label>
                <input class="form-check-input"type="radio" name="role" id="seller" value="seller"  required>
                
            </div>


            <div>
            <label class="form-label" for="username">username:</label>
            <input class="form-control" type="text" name="username" id="username" placeholder="enter username"> 
            <!-- name="username " hi rakhna hmesa kyoki passport local mongoose ke saath attach he suno passport local automatic user nAME STORE KRTA HE   -->
        <!--  kyko hmne schema me usrename password define nhi kiye he kyoki woh automatic store ho jaate in mongo by help of local passport -->
            </div>
            <div class="mt-3">
                <label class="form-label" for="email">email:</label>
                <input class="form-control" type="email" name="email" id="email" placeholder="write email" required>
            </div>
            <div class="mt-3">
                <label class="form-label" for="password">password:</label>
                <input class="form-control" type="password" name="password" id="password" placeholder="password" required>
                <!-- <input type="password" name="password" required> -->

            </div>
            <!-- <div class="mt-3"> -->
                <button type="submit" class ="mt-3" class="btn btn-sm btn-success">signup</button>
            <!-- </div> -->
            <p> dont have account <a href="/login">login</a></p>
        </form>
    </div>
  </div>
